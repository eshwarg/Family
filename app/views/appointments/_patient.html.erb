 
<% unless @appointments.empty? %>

 <table>
        <tr>
           <th>Doctor</th>
           <th>Patient</th>
           <th>Start time</th>
           <th>End time</th>
           <th>Hosiptal name</th> &nbsp;&nbsp;&nbsp;
           <th>Purpose</th>
           <th>Approval Status</th>
           <th></th>
           <th></th>
           <th></th>
         </tr>

        <% @appointments.each do |appointment| %>
           <tr>
               <td><%= appointment.doctor.first_name %></td>
               <td><%= appointment.patient.first_name %></td>
               <td><%= appointment.start_time %></td>
               <td><%= appointment.end_time %></td>
               <td><%= appointment.hosiptal_name %></td>
               <td><%= appointment.purpose %></td> &nbsp;
               <td>
                   <% if current_user.is_patient? %>
                      <%= appointment.get_approval_status %>
                   <% elsif current_user.is_doctor? %>
                      <%= appointment.get_approval_status %>
                      <% if appointment.approve_status == 1 %>
                        <%= link_to "Approve Status", "/appointment_approve/#{appointment.id}" %>
                      <% end %>
                   <% end %>
               </td> &nbsp;
               
               <td><%= link_to 'Show', appointment %></td>
               <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
               <td><%= link_to 'Destroy', appointment, :confirm => 'Are you sure?', :method => :delete %></td>
           </tr>
       <% end %>
 </table>  <br />

<% end %>

 <%= link_to 'New Appointment', new_appointment_path %> 
 
