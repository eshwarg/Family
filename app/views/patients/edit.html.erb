<h2>Edit Account </h2><%= form_for(@user, :url => patient_path(@user), :method => :put ) do |f| %><fieldset>  <ul class="patient-form">        <li> <%= f.label :first_name %>           <%= f.text_field :first_name %>	  </li>	  	  <li>	      <label>Surname</label>          <%= f.text_field :last_name %>	  </li>	  	  <li>	       <%= f.label :title %>	       <%= f.select :title, options_for_select(%w(Mr Ms Mrs )) %>	  </li>	        <%= f.fields_for :user_detail do |user_detail| %>	     <li>	       Date Of Birth : <%= user_detail.text_field :date_of_birth %>	     </li>      <% end %>	  	  <li>	      Residential Address: <%= f.text_field :address %>	  </li>	  	  <%= f.fields_for :user_detail do |user_detail| %>	     <li>  	        Postal Address : <%= user_detail.text_field :postal_address %>	     </li>      <% end %>	  	  <li>	     Home Phone: <%= f.text_field :home_number %>	  </li>	      <li>	  Work Phone: <%= f.text_field :office_number %>   </li>     <li>	  Mobile: <%= f.text_field :mobile_number %>   </li>      <%= f.fields_for :user_detail do |user_detail| %>      <li>		Marital Status :  <%= user_detail.select :martital_status, options_for_select(%w(Single Married Divorced )) %>	  </li>	  <li>	     Occupation : <%= user_detail.text_field :occupation %>	  </li>   <% end %>       <li>	  Country of Origin: <%= f.text_field :country %>   </li>      <p> DETAILS OF YOUR NEXT OF KIN or EMERGENCY CONTACT </p> <br/>      <%= f.fields_for :user_detail do |user_detail| %>	  <li>		 Name : <%= user_detail.text_field :emergency_contact_name %>	  </li>	  	  <li>		 Relationship To Patient : <%= user_detail.text_field :emergency_contact_relation %>	  </li>	  	  <li>		 Address : <%= user_detail.text_field :emergency_contact_address %>	  </li>	  	  <li>		 Phone : <%= user_detail.text_field :emergency_contact_phone %>	  </li>   <% end %>        </ul>       <div><%= f.submit "Update Account" %></div></fieldset><% end %>