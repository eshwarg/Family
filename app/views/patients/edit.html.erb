This is Edit Patient ViewMy Email is <%= current_user.email %><h2>Edit Account </h2><%= form_for(@user, :url => patient_path(@user), :method => :put ) do |f| %>  <div><%= f.label :first_name %><br />  <%= f.text_field :first_name %></div>    <div>Surname<br />  <%= f.text_field :last_name %></div>    <div>	 <%= f.label :title %><br />	 <%= f.select :title, options_for_select(%w(Mr Ms Mrs )) %>  </div>    <%= f.fields_for :user_detail do |user_detail| %>      <div>	   Date Of Birth : <%= user_detail.text_field :date_of_birth %>	</div>  <% end %>    <div>	  Residential Address: <%= f.text_field :address %>  </div>    <%= f.fields_for :user_detail do |user_detail| %>      <div>	   Postal Address : <%= user_detail.text_field :postal_address %>	</div>    <% end %>     <div>	 Home Phone: <%= f.text_field :home_number %>   </div>     <div>	  Work Phone: <%= f.text_field :office_number %>   </div>     <div>	  Mobile: <%= f.text_field :mobile_number %>   </div>      <%= f.fields_for :user_detail do |user_detail| %>      <div>		Marital Status :  <%= user_detail.select :martital_status, options_for_select(%w(Single Married Divorced )) %>	  </div>	  <div>	     Occupation : <%= user_detail.text_field :occupation %>	  </div>   <% end %>       <div>	  Country of Origin: <%= f.text_field :country %>   </div>      <p> DETAILS OF YOUR NEXT OF KIN or EMERGENCY CONTACT </p> <br/>      <%= f.fields_for :user_detail do |user_detail| %>	  <div>		 Name : <%= user_detail.text_field :emergency_contact_name %>	  </div>	  	  <div>		 Relationship To Patient : <%= user_detail.text_field :emergency_contact_relation %>	  </div>	  	  <div>		 Address : <%= user_detail.text_field :emergency_contact_address %>	  </div>	  	  <div>		 Phone : <%= user_detail.text_field :emergency_contact_phone %>	  </div>   <% end %>      <div><%= f.submit "Update Account" %></div><% end %>